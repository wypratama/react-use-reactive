    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "peerDependencies": {
    "react": ">=16"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "name": "react-use-reactive",
  "author": "Wicaksana Pratama",
  "module": "dist/react-use-reactive.esm.js",
  "size-limit": [
    {
      "path": "dist/react-use-reactive.cjs.production.min.js",
      "limit": "100 KB"
    },
    {
      "path": "dist/react-use-reactive.esm.js",
      "limit": "100 KB"
    }
  ],
  "devDependencies": {
    "@babel/core": "^7.21.0",
    "@size-limit/preset-small-lib": "^8.2.4",
    "@storybook/addon-essentials": "^6.5.16",
    "@storybook/addon-info": "^5.3.21",
    "@storybook/addon-links": "^6.5.16",
    "@storybook/addons": "^6.5.16",
    "@storybook/react": "^6.5.16",
    "@testing-library/react-hooks": "^8.0.1",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "babel-loader": "^9.1.2",
    "husky": "^8.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-is": "^18.2.0",
    "react-test-renderer": "^18.2.0",
    "size-limit": "^8.2.4",
    "tsdx": "^0.14.1",
    "tslib": "^2.5.0",
    "typescript": "^4.9.5"
  },
  "description": "A custom React hook to create reactive objects using useState with support for nested objects.",
  "repository": "git@github.com:wypratama/react-use-reactive.git",
  "keywords": [
    "react",
    "reactive-hook",
    "state-hook",
    "react-hook"
